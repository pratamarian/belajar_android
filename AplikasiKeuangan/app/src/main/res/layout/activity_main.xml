<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rian.pratama.aplikasikeuangan.MainActivity">

    <TextView
        android:id="@+id/txt_saldo"
        android:textSize="20dp"
        android:text="Sisa Saldo"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_trnsksi"
        android:textSize="20dp"
        android:text=" + "
        android:layout_below="@+id/tmbTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addTransaksi"/>
    <!--<TextView
        android:id="@+id/tmbTransaksi"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Transaksi" />-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_transaksi"
        android:layout_below="@+id/btn_trnsksi"/>


</LinearLayout>
