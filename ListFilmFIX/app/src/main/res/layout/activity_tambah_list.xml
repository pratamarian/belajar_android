<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rian.pratama.listfilmfix.TambahList">

    <TextView
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Judul Film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/inputjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tahunrilis"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Tahun Rilis"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="         :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/inputtahun"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rating"
            android:layout_below="@+id/tahunrilis"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="                        :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_below="@id/inputtahun"
            android:id="@+id/pilihrating"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_width="114dp"
            android:layout_height="50dp"></Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/deskripsi"
        android:textSize="20dp"
        android:text="Deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/inputdeskripsi"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <Button
        android:id="@+id/tambah"
        android:text="Tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addfilm"/>


</LinearLayout>
